<?xml version="1.0" encoding="UTF-8"?>
<hmx>

    <record id="view_sale_report_list" model="baseuiview">
        <field name="name">view.salereport.list</field>
        <field name="model">salereport</field>
        <field name="arch" type="xml">
            <list string="Sales Report" create="0" edit="0" delete="0">
                <field name="sale"/>
                <field name="product"/>
                <field name="partner"/>
                <field name="quantity"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="view_sale_report_form" model="baseuiview">
        <field name="name">view.salereport.form</field>
        <field name="model">salereport</field>
        <field name="arch" type="xml">
            <form string="Sales Report" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="sale"/>
                            <field name="product"/>
                            <field name="partner"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_report_pivot" model="baseuiview">
        <field name="name">view.salereport.pivot</field>
        <field name="model">salereport</field>
        <field name="arch" type="xml">
            <pivot string="Sales Report">
                <field name="sale" type="row"/>
                <field name="product" type="row"/>
                <field name="partner" type="row"/>
                <field name="quantity" type="measure"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- pivot v2 -->
    <record id="view_sale_report_pivot_v2" model="baseuiview">
        <field name="name">view.salereport.pivot-v2</field>
        <field name="model">salereport</field>
        <field name="arch" type="xml">
            <pivot-v2 string="Sales Report V2">
                <field name="sale" type="row"/>
                <field name="product" type="row"/>
                <field name="partner" type="row"/>
                <field name="quantity" type="measure"/>
                <field name="amount" type="measure"/>
            </pivot-v2>
        </field>
    </record>

    <record id="action_view_sale_report" model="baseactionactwindow">
        <field name="name">Sales Report</field>
        <field name="type">baseactionactwindow</field>
        <field name="res_model">salereport</field>
        <field name="view_mode">list,form,pivot,pivot-v2</field>
        <field name="view" eval="False"/>
        <field name="help">Create and manage sales.</field>
    </record>

    <menuitem id="menu_sale_report" name="Reports" parent="sale.menu_sale_root" sequence="2">
        <menuitem id="menu_action_view_sale_report" name="Sales Report" action="action_view_sale_report" sequence="0"/>
    </menuitem>

</hmx>
