<?xml version="1.0" encoding="utf-8"?>
<hmx>

    <!-- AI Session Form View -->
    <record id="view_ai_session_form" model="baseuiview">
        <field name="name">view.ai.session.form</field>
        <field name="model">aisession</field>
        <field name="arch" type="xml">
            <form class="hmx_form_ai_session" create="true" edit="true" delete="true" string="AI Session">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,started,ended,active"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="config_id"/>
                        <field name="external_session_id"/>
                        <field name="external_employee_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- form quick view -->
     <record id="view_ai_session_quick" model="baseuiview">
        <field name="name">view.ai.session.quick</field>
        <field name="model">aisession</field>
        <field name="type">quick</field>
        <field name="arch" type="xml">
            <form string="AI Session Quick View" class="hmx-quick-view" create="0" edit="0" delete="false">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,started,ended,active"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="config_id"/>
                        <field name="external_session_id"/>
                        <field name="external_employee_id"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <!-- AI Session List View -->
    <record id="view_ai_session_list" model="baseuiview">
        <field name="name">view.ai.session.list</field>
        <field name="model">aisession</field>
        <field name="arch" type="xml">
            <list string="AI Sessions">
                <field name="id" optional="hide"/>
                <field name="name"/>
                <field name="config_id"/>
                <field name="status"/>
                <field name="external_session_id"/>
                <field name="external_employee_id"/>
            </list>
        </field>
    </record>

    <!-- Ai Session Kanban View -->
    <record id="view_ai_session_kanban" model="baseuiview">
        <field name="name">AI Session Kanban</field>
        <field name="model">aisession</field>
        <field name="arch" type="xml">
            <kanban create="false" class="o_modules_kanban">
                <field name="name"/>
                <field name="config_id"/>
                <field name="status"/>

                <templates>
                <t t-name="kanban-box">
                    <div class="oe_module_desc" t-att-title="record.name.value">
                        <h4 class="o_kanban_record_title">
                            <field name="name"/>&amp;nbsp;
                        </h4>
                        <p class="oe_module_name">
                            <field name="config_id"/>
                            <code><field name="status"/></code>
                        </p>
                        <div class="oe_module_action">
                            <button name="action_view_quick"
                                string="Quick View"
                                type="object"
                                class="btn-primary"
                                icon="icon-eye"/>
                        </div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- AI Session Action -->
    <record id="action_ai_session_window" model="baseactionactwindow">
        <field name="name">AI Sessions</field>
        <field name="res_model">aisession</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{
            'search_default_active': 1,
            'search_default_groupby_active': 0,
        }</field>
        <field name="help">Create and manage AI Chat Session.</field>
        <field name="domain">[
            '|' ,
            ('created_by','=',uid),
            ('created_by','!=',uid),
        ]</field>
    </record>

</hmx>
